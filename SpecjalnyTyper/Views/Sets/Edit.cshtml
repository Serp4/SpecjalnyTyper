@model SpecjalnyTyper.Models.Set

@{
    ViewBag.Title = "Edit";
}
<font size="3" face="Comic Sans MS">
    <h2>Edytuj zestaw</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, "Nazwa zestawu", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            @{ Html.EnableClientValidation(false); }
            <div class="form-group">
                @Html.LabelFor(model => model.Date_Start, "Data rozpoczęcia", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Date_Start, new { htmlAttributes = new { @class = "form-control", @type = "datetime" } })
                    @Html.ValidationMessageFor(model => model.Date_Start, "Data rozpoczęcia jest wymagana", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Date_End, "Data zakończenia", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Date_End, new { htmlAttributes = new { @class = "form-control", @type = "datetime" } })
                    @Html.ValidationMessageFor(model => model.Date_End, "Data zakończenia jest wymagana", new { @class = "text-danger" })
                </div>
            </div>
            @{ Html.EnableClientValidation(true); }
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Anuluj", "Index", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Uaktualnij" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</font>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('input[type=datetime]').datetimepicker({
                addSliderAccess: true,
                dateFormat: 'dd.mm.yy',
                changeMonth: true,
                changeYear: true,
                selectOtherMonths: true,
                sliderAccessArgs: { touchonly: false }
            });
        })
    </script>
}
